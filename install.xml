    <property name="svn.exe"                        value="svn.exe" />

	<target name="update.framework" description="Update framework to latest stable build">

       <input message="This will update all framework files for this project, this operation cannot be undone. Do you want to continue (yes/no)?" validargs="Yes,No" addproperty="do.update" />

        <condition property="do.abort">
            <equals arg1="No" arg2="${do.update}" />
        </condition>

        <fail if="do.abort">Build aborted by user.</fail>

        <echo message="Updating framework to latest stable build" />

        <echo message="Updating system files" />
		<exec executable="${svn.exe}">
			<arg line="export ${install.framework.path}/system system --force" />
		</exec>

        <echo message="Updating assets" />
		<exec executable="${svn.exe}">
			<arg line="export ${install.framework.path}/public/assets ${assets.directory} --force" />
		</exec>

	</target>

